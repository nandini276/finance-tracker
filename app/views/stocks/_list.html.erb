<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.ticker %></td>
        <td><%= user_stock.last_price %></td>
        <td><%= link_to "Delete this stock", user_stock_path(user_stock), method: :delete,
                data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tody>
</table>